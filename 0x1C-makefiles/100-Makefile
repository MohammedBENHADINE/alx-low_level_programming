# Usage: make [all/clean/oclean/fclean] -f [file]


CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean re fclean

all:  $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $@

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
